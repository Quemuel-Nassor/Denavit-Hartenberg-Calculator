<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    @*<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />*@
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" referrerpolicy="no-referrer">
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" referrerpolicy="no-referrer">
    <link rel="stylesheet" href="~/css/site.min.css" />
    <link rel="shortcut icon" href="~/calculator_icon.svg" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark bg-gradient box-shadow mb-3">
            <div class="container">
                <div class="col-auto">
                    <a href="/"><img src="~/calculator_icon.svg" style="filter: invert(1); width: 30px;" alt="calculator icon" /></a>
                </div>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <strong>@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link text-light text-uppercase" })</strong>
                        </li>
                        <li class="nav-item">
                            <strong>@Html.ActionLink("Calculator", "Calculator", "Home", null, new { @class = "nav-link text-light text-uppercase" })</strong>
                        </li>
                        <li class="nav-item">
                            <strong>@Html.ActionLink("Api", "Api", "Home", null, new { @class = "nav-link text-light text-uppercase" })</strong>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-dark bg-gradient footer">
        <div class="container text-light">
            Copyright &copy; @DateTime.Now.Year - Denavit Hartenberg Calculator - Made by <a target="_blank" href="https://github.com/Quemuel-Nassor"> Quemuel Alves Nassor</a>
        </div>
    </footer>
    <script async defer src="~/lib/jquery/dist/jquery.min.js"></script>
    @*<script async defer src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>*@
    @*<script async defer src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>*@
    <script async defer src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @*<script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" referrerpolicy="no-referrer"></script>*@
    <script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.min.js" referrerpolicy="no-referrer"></script>
    <script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js" referrerpolicy="no-referrer"></script>
    <script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js" referrerpolicy="no-referrer"></script>
    <script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" referrerpolicy="no-referrer"></script>
    @*<script async defer rel="preconnect" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.5.3/js/bootstrap.min.js" referrerpolicy="no-referrer"></script>*@
    <script async defer src="~/js/site.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
